@model TransferViewModel

@{ 
    ViewBag.Title = "Transfer book";
}

<form asp-controller="home" asp-action="transfer" method="post">
    <div>
        <label>Id:</label>
        <div>
            <input asp-for="@Model.UserId" placeholder="User Id" />
            <span asp-validation-for="@Model.UserId" class="text-danger"></span>
        </div>
        <label>First Name:</label>
        <div>
            <input asp-for="@Model.FirstName" placeholder="FirstName" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <label>Last Name:</label>
        <div>
            <input asp-for="@Model.LastName." placeholder="FirstName" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger">

    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
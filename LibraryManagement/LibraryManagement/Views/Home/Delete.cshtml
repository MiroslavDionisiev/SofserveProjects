@model Book

@{ 
    ViewBag.Title = "Delete a title";
}

@section Stylesheets {
    <link href="~/css/DeleteStylest.css" rel="stylesheet" />
}

<form asp-controller="Home" asp-action="Delete" method="post">
    <input hidden asp-for="Id" />
    <div class=" wrapper">
        <div class="decision">
            <h2>Do you want to remove @Model.Name</h2>
            <div>
                <button type="submit" class="btn btn-primary">Delete</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>
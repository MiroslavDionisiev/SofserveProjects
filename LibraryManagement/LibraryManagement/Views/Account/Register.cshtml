@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

@section Stylesheets {
    <link href="~/css/EditStyles.css" rel="stylesheet" />
}

<h1>User Registration</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="FirstName">FirstName:</label>
        <div>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="LastName">LastName:</label>
        <div>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="@Model.Role">Role</label>
        <div>
            <select asp-for="@Model.Role" asp-items="Html.GetEnumSelectList<Roles>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="@Model.Role" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="Email">Email:</label>
        <div>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div>
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <div>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary distance">Register</button>
</form>
